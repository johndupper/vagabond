<%= form_for([@city, @city.posts.build]) do |f| %>
  <p>
    <%= f.label :user %>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :experience %>
    <%= f.text_area :experience %>
  </p>
  <p>
    <%= f.label :photo_url %>
    <%= f.text_area :photo_url %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>