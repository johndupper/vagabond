 <div class="input-group">
	 <%= form_for([@city, @city.posts.build]) do |f| %>
  <p>
    <%= f.text_field :user, class: "form-control", placeholder: "user" %>
  </p>
  <p>

    <%= f.text_field :title, class: "form-control", placeholder: "title"%>
  </p>
  <p>
    <%= f.text_area :description, class: "form-control", placeholder: "Describe your experience" %>
  </p>
  <p>
    <%= f.text_area :experience, class: "form-control", placeholder: "live, work, or play" %>
  </p>
  <p>
    <%= f.text_area :photo_url, class: "form-control", placeholder: "add a photo url" %>  
  </p>

  <p>
   <%= f.submit %>
  </p>
<% end %>
	 </div>
