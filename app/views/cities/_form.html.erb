<%= form_for @city do |f| %>
  <p>
    <%= f.label :city_name %>
    <%= f.text_field :city_name %>
  </p>
  <p>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>